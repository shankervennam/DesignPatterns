<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

   <CheckBox
       android:id="@+id/bagel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_marginTop="45dp" />

    <TextView
        android:text = "Bagel"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignBottom="@+id/bagel"
        android:layout_toRightOf="@+id/bagel"
        android:layout_toEndOf="@+id/bagel"
        android:id="@+id/textView" />

    <CheckBox
        android:id="@+id/bun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/bagel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="SALT"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bun"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView3" />

    <CheckBox
        android:id="@+id/egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bun"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:text="EGG"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/egg"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView2" />

    <CheckBox
        android:id="@+id/cress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="CRESS"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView4" />

 <Button
     android:id="@+id/builder_ok"
     android:text="ok"
     android:textSize="25sp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerVertical="true"
     android:onClick="onClick"
     android:layout_toRightOf="@+id/textView3"
     android:layout_toEndOf="@+id/textView3" />

 <TextView
     android:id="@+id/display_builder"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="hitme"
     android:textSize="25sp"
     android:layout_marginTop="55dp"
     android:layout_below="@+id/builder_ok"
     android:layout_alignLeft="@+id/builder_ok"
     android:layout_alignStart="@+id/builder_ok" />
</RelativeLayout>